<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sandback"
    tools:context=".fragment.XylophoneFragment">

    <ToggleButton
        android:id="@+id/xylophone_toggleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:textColor="#D32F2F"
        android:textOff="▶"
        android:textOn="■"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_explanation" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="280dp"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_do"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="270dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="260dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_mi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_fa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="240dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_so"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="230dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_la"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView7">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_ti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="210dp"
        android:layout_height="85dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/silver2"
        app:cardBackgroundColor="#00ffffff"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView8">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xylophone_doHigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/silver2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/xylophone_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="멋진 연주를 녹음해보세요."
        android:textColor="#4D000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView9" />

</androidx.constraintlayout.widget.ConstraintLayout>