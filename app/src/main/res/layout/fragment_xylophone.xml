<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.XylophoneFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_do"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:background="#F44336"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_re"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#FF9800"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_do" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_mi"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFEB3B"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_re" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_fa"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#4CAF50"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_mi" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_so"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#03A9F4"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_fa" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_la"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_so" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_ti"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#673AB7"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_la" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_doHigh"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#F44336"
        android:padding="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_ti" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_dosharp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="10dp"
        android:background="#1565C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_resharp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#1565C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_dosharp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_fasharp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="15dp"
        android:background="#1565C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_resharp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_sosharp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#1565C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_fasharp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/xylophone_lasharp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#1565C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_sosharp" />

    <ToggleButton
        android:id="@+id/xylophone_toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="52dp"
        android:textOn="정지"
        android:textOff="녹음 시작"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xylophone_lasharp" />

</androidx.constraintlayout.widget.ConstraintLayout>